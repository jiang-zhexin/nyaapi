{
    "fmt": {
        "lineWidth": 160,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": [
            "src/"
        ]
    },
    "tasks": {
        "run": "deno run --allow-read --allow-net src/index.ts",
        "dev": "deno run --watch --allow-read --allow-net src/index.ts",
        "build": "deno compile --allow-read --allow-net -o nyaapi src/index.ts"
    },
    "imports": {
        "@std/encoding": "jsr:@std/encoding@^1.0.10",
        "@zhexin/bencoder": "jsr:@zhexin/bencoder@^0.1.1",
        "hono": "jsr:@hono/hono@^4.7.11",
        "htmlrewriter": "npm:html-rewriter-wasm@^0.4.1"
    }
}